			<MudNavLink Href="friendInvites">Invites</MudNavLink>
			<MudNavLink Href="followers">Followers</MudNavLink>
			<MudNavLink Href="friends">Friends</MudNavLink>
			<MudNavLink Href="chats">Chats</MudNavLink>
